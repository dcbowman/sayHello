
<section class="section-divider textdivider divider1">
			<div class="container">
				<h1>Welcome</h1>
				<hr>
				<p>Please enter your guests information.</p>
			</div><!-- container -->
			</section>

<div class="container">

<div class= "row">
	<div class="col-lg-6">


	<p>
	<form class="form-horizontal" role= "form" form action ="/guest/submit" method="post">
	<div class="form-group">
	 <label for="firstName" class="col-lg-4 control-label"></label>
			<div class="col-lg-10">
			<input type="text" class="form-control" id="firstName" placeholder="First Name">
			</div>
			</div>
	 <div class="form-group">
     <label for="lastName" class="col-lg-4 control-label"></label>
			<div class="col-lg-10">
	        <input type="text" class="form-control" id="lastName" placeholder="Last Name">
			</div>
			</div>
	 <div class="form-group">
	 <label for="email" class="col-lg-4 control-label"></label>
			<div class="col-lg-10">
			<input type="email" class="form-control" id="email" placeholder="Email">
			</div>
			</div>
	 <div class="form-group">
	 <label for="position" class="col-lg-4 control-label"></label>
		    <div class="col-lg-10">
			<input type="text" class="form-control" id="position" placeholder="Position">
			</div>
		    </div>
	 <div class="form-group">
	 <label for="table" class="col-lg-4 control-label"></label>
			<div class="col-lg-10">
			<input type="text" class="form-control" id="table" placeholder="Table">
			</div>
			</div>
	<div class="form-group">
	 <label for="linkedin" class="col-lg-4 control-label"></label>
			<div class="col-lg-10">
			<input type="text" class="form-control" id="linkedin" placeholder="LinkedIn">
			</div>
			</div>
     <div class="form-group">
	 <label for="imagePath" class="col-lg-4 control-label"></label>
			<div class="col-lg-10">
			<input type="text" class="form-control" id="image" placeholder="Picture">
			</div>
			</div>
	 <div class="form-group">
	 <div class="col-lg-10">
		    <button type="submit" id="addGuest" a href="/submit" class="btn btn-success">Enter</button>
			</div>
			</div>
	</form><!-- form -->		   
 	</p>
 	</div>

 	
   <div class = "col-lg-6" id="list">
 	<p>
 	<table class= "table table-striped table-responsive" id="adminList">
 	<h3 class="centered"> Master Guest List</h3>
 	<br>	
 	<thead>
 	<th>First Name</th>
 	<th>Last Name</th>
 	<th>Position</th>
 	<th>Table</th>
 	</thead>
 	<tbody>
 	{{# each guests}}
 	<tr>
 	<td>{{firstName}}<td>
 	<td>{{lastName}}</td>
 	<td>{{position}}</td>
    <td>{{table}}</td>
    </tr>
    {{/each}}
    </tbody>
    </table>


	<div id = "buttons">
	<button id="tablesort">Sort by Table</button>
	</div> 

</p>
</div>
</div>
</div>
</section>